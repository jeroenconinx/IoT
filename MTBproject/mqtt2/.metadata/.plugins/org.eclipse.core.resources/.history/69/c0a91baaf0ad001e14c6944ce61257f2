//servo_angles_q = xQueueCreate(1u, sizeof(servo_angles_q_data_t));


int pack_coordinates(int x, int y)
{
	int packed_coordinates = (x << 8) | y;
	return packed_coordinates;
}

void unpack_coordinate(int packed_coordinate, int *x, int *y)
{
	*x = (packed_coordinate >> 8) & 0xFF;
	*y = packed_coordinate & 0xFF;
}
